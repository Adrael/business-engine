{
    "compileOnSave": false,
    "compilerOptions": {
        "types": [
            "@types/mocha"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": false,
        "noResolve": false,
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "strictNullChecks": true
    },
    "include": [
        "lib/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test/**/*.spec.ts"
    ]
}
